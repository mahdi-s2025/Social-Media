<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.socialmedia.Views.loginPageController">
   <ImageView fitHeight="580.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../pictures/login2.png"/>
   </ImageView>
   <Button fx:id="login_btn" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" disable="true"
           layoutX="120.0" layoutY="295.0" mnemonicParsing="false" onAction="#loginClick" prefHeight="40.0"
           prefWidth="260.0" style="-fx-background-color: black; -fx-background-radius: 10;" text="LOGIN"
           textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="Times New Roman Bold" size="12.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
   <TextField fx:id="username_txt" layoutX="120.0" layoutY="185.0" prefHeight="40.0" prefWidth="260.0"
              promptText="Username"
              style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10; -fx-border-width: 2;"/>
   <PasswordField fx:id="password_txt" layoutX="120.0" layoutY="240.0" prefHeight="40.0" prefWidth="260.0"
                  promptText="Password"
                  style="-fx-border-radius: 10; -fx-border-color: black; -fx-background-radius: 10; -fx-border-width: 2;"/>
   <Button fx:id="googleLogin_btn1" alignment="CENTER" contentDisplay="CENTER" layoutX="120.0" layoutY="385.0"
           mnemonicParsing="false" onAction="#googleLoginClicked" opacity="0.0" prefHeight="40.0" prefWidth="260.0"
           style="-fx-background-radius: 10;" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="Times New Roman Bold" size="12.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
   <Label layoutX="188.0" layoutY="436.0" prefHeight="18.0" prefWidth="74.0" text="New User?">
      <font>
         <Font name="Cambria Bold" size="14.0"/>
      </font>
   </Label>
   <Label fx:id="signup_btn" layoutX="261.0" layoutY="435.0" onMouseClicked="#signupClick"
          onMouseEntered="#lbl_signup_mouseEntered" onMouseExited="#lbl_signup_mouseExited" prefHeight="18.0"
          prefWidth="51.0" text="Sign up!" underline="true">
      <font>
         <Font name="Segoe UI Symbol" size="14.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Label>
   <Label fx:id="error_lbl" alignment="CENTER" layoutX="100.0" layoutY="474.0" prefHeight="40.0" prefWidth="300.0"
          textAlignment="CENTER" textFill="RED">
      <font>
         <Font size="14.0"/>
      </font>
   </Label>
</AnchorPane>
